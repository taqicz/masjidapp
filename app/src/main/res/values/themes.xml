<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme, HARUS turun dari MaterialComponents agar MaterialButton, dll. tidak crash! -->
    <style name="Base.Theme.Masjidapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Konfigurasi untuk BottomNavigationView -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Theme.Masjidapp" parent="Base.Theme.Masjidapp" />

    <!-- Style khusus untuk BottomNavigationView -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/nav_item_color_selector</item>
        <item name="itemTextColor">@drawable/nav_item_color_selector</item>
    </style>
</resources>