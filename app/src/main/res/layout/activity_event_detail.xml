<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".EventDetailActivity">

    <!-- Scrollable Event Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/eventDetailImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corners"
                android:contentDescription="Event Image" />

            <TextView
                android:id="@+id/eventDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Event"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    android:tint="#757575"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/eventDetailLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokasi"
                    android:textSize="16sp"
                    android:textColor="#424242" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_today"
                    android:tint="#757575"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/eventDetailDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textSize="16sp"
                    android:textColor="#424242" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    android:tint="#757575"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/eventDetailTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu"
                    android:textSize="16sp"
                    android:textColor="#424242" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:tint="#757575"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/eventDetailType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipe"
                    android:textSize="16sp"
                    android:textColor="#424242" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#212121"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/eventDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi event akan ditampilkan di sini."
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Button Download -->
    <ImageButton
        android:id="@+id/btnDownloadEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:background="@drawable/fab_background"
        android:padding="16dp"
        android:src="@android:drawable/ic_menu_save"
        android:contentDescription="Download Event"
        android:tint="#FFFFFF" />
</FrameLayout>
